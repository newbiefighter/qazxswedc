<Alloy>
	<NavigationWindow id="navWin" platform="ios">
	<Window class="container" title="L('order')" cus_title="order" id="orderWin">
		<LeftNavButton platform="ios">
            <Button id="menuBtn"/>
        </LeftNavButton>
        <ScrollView id='main'>
			<View class="pair4">
				<Label id="regular_lbl" class="order_label">L('service_type')</Label>
				<TabbedBar id="tbr2" platform="ios" >
					<Labels>
						<Label>L('try_once')</Label>
						<Label>L('regular_service')</Label>			
					</Labels>
				</TabbedBar>				
			</View>
			<View class="pair">
				<View class="pair-container">
				<ImageView class="order_icon" id="time_icon"></ImageView>
				<TextField id="time_tf" class="line" hintText="L('service_time')"></TextField>
				</View>
			</View>
			<View class="pair2" >
				
				
					<Label id="addr_lbl" class="order_label">L('service_address')</Label>
					<View id='combo_district' ></View>
				
			</View>
			
			<View class="pair4">
				<Label id="hours_lbl" class="order_label">L('hour_fee')</Label>
				<View class="pair-container" >
					<View class="hour-fee" width="35%">
						<View class="hour-fee-text1">
							<Button class="minus" id="price_minus"></Button>
							<TextField id="price" class="midsize" value="$80" color="#888888"></TextField>
							<Button class="plus" id="price_plus"></Button>
						</View>
					</View>
					<View class="hour-fee" width="35%">
						<View class="hour-fee-text1">
							<Button class="minus" id="hour_minus"></Button>
							<TextField id="hours" class="midsize" value="3h" color="#888888"></TextField>
							<Button class="plus" id="hour_plus"></Button>
						</View>
					</View>
					<View class="hour-fee" width="Ti.UI.FILL">
						<View class="hour-fee-text2">
							<Label id="fee_label" class="midsize">L('total')</Label>
							<Label id="fee" class="bigsize">$240</Label>
						</View>
					</View>
				</View>
			</View>
			
			<View class="pair">
				<View class="pair-container">
					<ImageView class="order_icon" id="special_icon"></ImageView>
					<TextField id="special_tf" class="line" hintText="L('special_req')"></TextField>
				</View>
			</View>
		
			<View class="pair3">
				<Button title="L('send')" class="order_btn" id="send"></Button>
			</View>
		</ScrollView>
	</Window>
