<Alloy>
	<Window id="settingWin">
		<LeftNavButton platform="ios">
            <!-- <Button width=Ti.UI.SIZE height=Ti.UI.SIZE title="<" titleColor="#70c5a8" ></Button> -->
            <ImageView image="/images/left_arrow.png" id="backBtn" width="22" height="22"></ImageView>
        </LeftNavButton>
		<TableView id="table1" scrollable="false" platform="ios">
            <TableViewSection  id='tableSection1' headerTitle="L('system_preferences')" 
            cus_title="system_preferences" type="TableViewSection">
                <HeaderView>
                    <View backgroundColor="#fff" >
                        <Label text="L('system_preferences')" class="headtitle"></Label>
                    </View>
                </HeaderView>
                <TableViewRow title="L('language')" cus_title='language' class='tvrow'>
                	<TabbedBar id="tbr" platform="ios">
						<Labels>
							<Label>中文(繁體)</Label>
							<Label>English</Label>
						</Labels>
					</TabbedBar>
                </TableViewRow>
                <TableViewRow title="L('notification')" class='tvrow' id="row1">
                    <!-- <ImageView id="notification" class="noti_onoff"></ImageView> -->
                    <Button id="notification" class="noti_onoff"></Button>
                </TableViewRow>
                <TableViewRow title="L('noti_sound')" class='tvrow' id="row2">
                   <Button id="noti_sound" class="noti_onoff"></Button>
                </TableViewRow>
                <TableViewRow title="L('noti_vibrate')" class='tvrow' id="row3">
                   <Button id="noti_vibrate" class="noti_onoff"></Button>
                </TableViewRow>
                
            </TableViewSection>
        </TableView>
        <View id="sys_table" platform="android"></View>
        <TableView id="table2" scrollable="false">
            <TableViewSection headerTitle="L('version')" id='tableSection2' type="TableViewSection" cus_title="version">
                <HeaderView>
                    <View backgroundColor="#fff" >
                        <Label text="L('version')" class="headtitle"></Label>
                    </View>
                </HeaderView>
            	<TableViewRow title="L('about_us')" class="setting_tr" id="about_us" cus_title='about_us'></TableViewRow>
            	<TableViewRow title="L('provision')" class="setting_tr" id="provision" cus_title='provision'></TableViewRow>
            	<!-- <TableViewRow title="L('privacy')" class="setting_tr" id="privacy"></TableViewRow> -->
            </TableViewSection>
            
        </TableView>
	</Window>
</Alloy>